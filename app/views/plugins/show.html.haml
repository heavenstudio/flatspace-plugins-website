- model_class = @plugin.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @plugin._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @plugin._id
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @plugin.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @plugin.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), plugins_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_plugin_path(@plugin), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), plugin_path(@plugin), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
